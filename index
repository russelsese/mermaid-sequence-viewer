<main>

  <div class="card">
    <div class="card-title">Mermaid Definition</div>

    <textarea id="mermaidInput"></textarea>

    <div class="actions">
      <button onclick="downloadText()">Download TXT</button>
      <button onclick="downloadSVG()">Download SVG</button>
      <button onclick="downloadPNG()">Download PNG</button>
      <button onclick="copyPNG()">Copy PNG</button>
    </div>
  </div>

