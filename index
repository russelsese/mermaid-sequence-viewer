<footer>
  Client-side only Â· Autosaved locally Â·
  <a href="https://github.com/russelsese" target="_blank" rel="noopener">
    [GitHub](chatgpt://generic-entity?number=0) / russelsese
  </a>
</footer>

<script>
  const STORAGE_KEY = "mermaid-seq-diagram-content";
  const THEME_KEY = "mermaid-seq-diagram-theme";

  const input = document.getElementById("mermaidInput");
  const container = document.getElementById("diagram");
  const themeToggle = document.getElementById("themeToggle");

  let debounceTimer;

  // -------------------------
  // Theme
  // -------------------------
  function applyTheme(theme) {
    document.documentElement.setAttribute("data-theme", theme);
    themeToggle.textContent = theme === "dark" ? "â˜€ï¸ Light" : "ðŸŒ™ Dark";

    mermaid.initialize({
      startOnLoad: false,
      securityLevel: "strict",
      theme: theme === "dark" ? "dark" : "default"
    });

    renderDiagram();
  }

  const savedTheme =
    localStorage.getItem(THEME_KEY) ||
    (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

  applyTheme(savedTheme);

  themeToggle.onclick = () => {
    const newTheme =
      document.documentElement.getAttribute("data-theme") === "dark"
        ? "light"
        : "dark";
    localStorage.setItem(THEME_KEY, newTheme);
    applyTheme(newTheme);
  };

  // -------------------------
  // Autosave + Render
  // -------------------------
  input.value =
    localStorage.getItem(STORAGE_KEY) ||
`sequenceDiagram
    participant User
    participant App
    participant API

    User->>App: Click Login
    App->>API: Authenticate
    API-->>App: Token
    App-->>User: Logged in`;

  input.addEventListener("input", () => {
    localStorage.setItem(STORAGE_KEY, input.value);
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(renderDiagram, 300);
  });

  async function renderDiagram() {
    container.innerHTML = "";
    if (!input.value.trim()) return;

    try {
      const { svg } = await mermaid.render(
        "diagram-" + Date.now(),
        input.value
      );
      container.innerHTML = svg;
    } catch (err) {
      container.innerHTML = `<div class="error">${err.message}</div>`;
    }
  }

  // -------------------------
  // Downloads
  // -------------------------
  function downloadText() {
    downloadBlob(input.value, "text/plain", "txt");
  }

  function downloadSVG() {
    const svg = container.querySelector("svg");
    if (!svg) return alert("Render a diagram first.");
    downloadBlob(svg.outerHTML, "image/svg+xml", "svg");
  }

  function downloadPNG() {
    svgToCanvas(blob => {
      downloadBlob(blob, "image/png", "png", true);
    });
  }

  function copyPNG() {
    if (!navigator.clipboard || !window.ClipboardItem) {
      alert("Clipboard image copy is not supported in this browser.");
      return;
    }

    svgToCanvas(blob => {
      navigator.clipboard.write([
        new ClipboardItem({ "image/png": blob })
      ]).then(() => {
        alert("PNG copied to clipboard.");
      }).catch(err => {
        alert("Failed to copy image: " + err.message);
      });
    });
  }

  function svgToCanvas(callback) {
    const svg = container.querySelector("svg");
    if (!svg) return alert("Render a diagram first.");

    const svgData = new XMLSerializer().serializeToString(svg);
    const canvas = document.createElement("canvas");
    const ctx = canvas.getContext("2d");
    const img = new Image();

    const svgBlob = new Blob([svgData], { type: "image/svg+xml" });
    const url = URL.createObjectURL(svgBlob);

    img.onload = () => {
      canvas.width = img.width;
      canvas.height = img.height;
      ctx.drawImage(img, 0, 0);
      URL.revokeObjectURL(url);
      canvas.toBlob(callback);
    };

    img.src = url;
  }

  function downloadBlob(content, type, ext, isBlob = false) {
    if (!content) return;

    const timestamp = new Date().toISOString().replace(/[:.]/g, "-");
    const blob = isBlob ? content : new Blob([content], { type });
    const url = URL.createObjectURL(blob);

    const a = document.createElement("a");
    a.href = url;
    a.download = `mermaid-seq-diag-${timestamp}.${ext}`;
    a.click();

    URL.revokeObjectURL(url);
  }

  // Initial render
  renderDiagram();
</script>

</body>
